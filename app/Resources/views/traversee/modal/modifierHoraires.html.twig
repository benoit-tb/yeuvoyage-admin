{% extends 'common/modal/base.html.twig' %}
{% block modalBody %}
    <div class="form-group">
        <label for="update-compagnie">Compagnie</label>
        <input type="text" class="form-control" id="update-compagnie" disabled="disabled">
    </div>
    <div class="form-group">
        <label for="update-trajet">Trajet</label>
        <input type="text" class="form-control" id="update-trajet" disabled="disabled">
    </div>
    <table>
        <tr>
            <td>
                <div class="form-group">
                    <label for="update-date">Date</label>
                    <input type="text" class="form-control" id="update-date" disabled="disabled">
                </div>
            </td>
            <td>
                <div class="form-group" style="padding-left: 10px">
                    <label for="update-horaire">Horaire</label>
                    <input type="text" class="form-control time-picker" id="update-horaire">
                </div>
            </td>
        </tr>
    </table>
    <input type="hidden" id="traversee-id" name="traversee-id" value="0" />
{% endblock %}